<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EFinal.views.nuevo"
             Title="nuevo">
    <VerticalStackLayout>

        <Label Text="Agregar Nueva Persona" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="10"/>

        <Entry x:Name="txtid" Placeholder="ID" Keyboard="Numeric"/>
        <Entry x:Name="txtCedula" Placeholder="Cédula"/>
        <Entry x:Name="txtNombre" Placeholder="Nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Apellido"/>
        <Entry x:Name="txtUsuario" Placeholder="usuario"/>
        <Entry x:Name="txtContrasena" Placeholder="constraseña" IsPassword="True"/>

        <Button Text="Imagen" WidthRequest="100" Margin="5" Clicked="uploadfile_Clicked"/>

        <Label x:Name="RutaImagen" Text="" Margin="10" FontAttributes="Italic"  
       Padding="30,0"/>

        <Button Text="Guardar" Clicked="guardar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>